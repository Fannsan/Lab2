<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:background="#554994">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/fox2">

        <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:backgroundTint="#CDF5DDC1"
        android:background="@drawable/rounded">


        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME TO \n LEVEL UP LIFE"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#691F2C"
        android:layout_marginTop="10dp"
        android:textSize="50sp"
        android:padding="10dp"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="sans-serif-smallcaps"
        />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="40dp"
                android:text="In LEVEL UP, you will receive suggestions on how to level up your life in different ways. It can range from drinking more water to taking a walk or finding something new to cook. Sometimes we need a friend who push us to become a better version of ourselves. \n This is the goal of LEVEL UP!"
                android:textSize="20sp"
                android:padding="10dp"
                android:gravity="center"
                android:background="@drawable/rounded"
                android:backgroundTint="@color/white"/>
            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#B2E58984"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:text="To login"
                android:textSize="25sp"
                android:layout_marginBottom="15dp"/>



            <Button
            android:id="@+id/btn_GoToSignUpNewsletter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#B2E58984"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:text="Newsletter"
            android:textSize="25sp"
            android:layout_marginBottom="20dp"/>



    </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>
</FrameLayout>