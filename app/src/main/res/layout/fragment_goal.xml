<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".GoalFragment">
<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Goal: "
        android:textSize="40sp"
        android:id="@+id/goal"
        android:layout_margin="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Write your goal"
            android:textSize="20dp"
            android:layout_marginTop="50dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/et_inputGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Drink 1 liter water a day"
            android:inputType="textMultiLine"
            android:minHeight="48dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Write how many points this goal is worth 1-10"/>

        <EditText
            android:id="@+id/et_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Your points..."
            android:inputType="number"
            android:minHeight="48dp" />


        <Button
            android:id="@+id/btn_addGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/salmon"
            android:text="Add goal" />

</androidx.appcompat.widget.LinearLayoutCompat>
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_newGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:text="New goal"
        android:layout_margin="10dp"
        app:icon="@drawable/baseline_add_24"/>

</RelativeLayout>